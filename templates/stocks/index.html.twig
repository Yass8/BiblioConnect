{% extends 'base_admin.html.twig' %}

{% block title %}Stocks index{% endblock %}

{% block body %}
    <h1>Stocks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Livre</th>
                <th>Quantity</th>
                <th>Qty_reserved</th>
                <th>Qty_available</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.books.title }}</td>
                <td>{{ stock.quantity }}</td>
                <td>{{ stock.quantityReserved }}</td>
                <td>{{ stock.quantityAvailable }}</td>
                <td>
                    {% if stock.quantity == stock.quantityReserved %}
                        <span class="badge bg-warning">Non disponible</span>
                        {% else %}
                        <span class="badge bg-success">Disponible</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_stocks_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stocks_edit', {'id': stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stocks_new') }}">Create new</a>
{% endblock %}
